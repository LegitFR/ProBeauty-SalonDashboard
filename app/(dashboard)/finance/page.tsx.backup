      const user = JSON.parse(userData);
      const salonId = user.salonId;

      if (!salonId) return;

      let response;
      switch (dateRange) {
        case "today":
          response = await getLastNDaysAnalytics(salonId, 0, token);
          break;
        case "week":
          response = await getLastNDaysAnalytics(salonId, 7, token);
          break;
        case "month":
          response = await getMonthAnalytics(salonId, token);
          break;
        case "year":
          response = await getLastNDaysAnalytics(salonId, 365, token);
          break;
        case "all-time":
          response = await getAllTimeAnalytics(salonId, token);
          break;
        default:
          response = await getMonthAnalytics(salonId, token);
